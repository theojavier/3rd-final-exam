<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_login">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.a3rd.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_analytics"
            app:destination="@id/nav_myschedule" />
        <action
            android:id="@+id/action_nav_home_to_nav_exam_item_page"
            app:destination="@id/nav_exam_item_page" />
    </fragment>
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.a3rd.ui.personal_info.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_exam_item_page"
        android:name="com.example.a3rd.ui.exam.Exam_item_Fragment"
        android:label="Profile"
        tools:layout="@layout/exam_layout" />

    <fragment
        android:id="@+id/nav_exam_history"
        android:name="com.example.a3rd.ui.personal_info.ExamHistoryFragment"
        android:label="Exam History"
        tools:layout="@layout/exam_history" />

    <fragment
        android:id="@+id/nav_myschedule"
        android:name="com.example.a3rd.ui.home.ScheduleFragment"
        android:label="menu_schedile"
        tools:layout="@layout/activity_schedule" >
    </fragment>
    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.a3rd.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/login" >
        <action
            android:id="@+id/action_nav_login_to_nav_forgot"
            app:destination="@id/nav_forgot" />
        <action
            android:id="@+id/action_nav_login_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_forgot"
        android:name="com.example.a3rd.ui.auth.ForgotFragment"
        android:label="Forgot Password"
        tools:layout="@layout/forget" />
    <fragment
        android:id="@+id/nav_reset_password"
        android:name="com.example.a3rd.ui.auth.ResetPasswordFragment"
        android:label="Forgot Password"
        tools:layout="@layout/reset_password" />
    <!-- Exam Fragment -->
    <fragment
        android:id="@+id/examFragment"
        android:name="com.example.a3rd.ui.exam.ExamFragment"
        android:label="Exam"
        tools:layout="@layout/exam">

        <!-- ðŸ‘‡ Action: go to Result Fragment -->
        <action
            android:id="@+id/action_examFragment_to_examResultFragment"
            app:destination="@id/examResultFragment" />
    </fragment>

    <!-- Exam Result Fragment -->
    <fragment
        android:id="@+id/examResultFragment"
        android:name="com.example.a3rd.ui.exam.ExamResultFragment"
        android:label="Exam Result"
        tools:layout="@layout/fragment_exam_result" />

</navigation>