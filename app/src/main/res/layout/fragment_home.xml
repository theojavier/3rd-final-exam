<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.home.HomeFragment">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBigInfo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#FF9800"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Your custom image -->

                <!-- Title text below image -->

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/istockphoto_1401106927_612x612_removebg_preview" />

                <TextView
                    android:id="@+id/infoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Progress"
                    android:textSize="30sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/imageView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tagline -->
        <TextView
            android:id="@+id/app_tagline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Track, Plan, and Achieve Your Goals"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardBigInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/app_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="Progress is your personal productivity companion. Stay organized, monitor your growth, and accomplish more every day.\n\nThis is just sample text â€” you can replace it anytime with your real content."
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/app_tagline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dashboard Title -->
        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/app_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Box 1: Upcoming Exams -->
        <androidx.cardview.widget.CardView
            android:id="@+id/Upcoming_Exam"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#4CAF50"
            app:layout_constraintTop_toBottomOf="@id/homeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Completed_Exam"
            app:layout_constraintHorizontal_bias="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtUpcomingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Exams"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtUpcomingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Box 2: Completed Exams -->
        <androidx.cardview.widget.CardView
            android:id="@+id/Completed_Exam"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#2196F3"
            app:layout_constraintTop_toBottomOf="@id/homeTitle"
            app:layout_constraintStart_toEndOf="@id/Upcoming_Exam"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtCompletedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed Exams"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCompletedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Exam Schedule Section -->
        <TextView
            android:id="@+id/examScheduleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Schedule"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/Completed_Exam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/examScheduleCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/examScheduleTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2,3"
                android:shrinkColumns="1,2,3"
                android:divider="@android:color/darker_gray"
                android:showDividers="middle"
                android:padding="12dp">

                <!-- Header Row -->
                <TableRow>
                    <TextView android:text="Subject" android:textStyle="bold"/>
                    <TextView android:text="Date" android:textStyle="bold" android:gravity="center"/>
                    <TextView android:text="Time" android:textStyle="bold"/>
                    <TextView android:text="Status" android:textStyle="bold"/>
                </TableRow>

                <!-- Placeholder Row -->
                <TableRow>
                    <TextView
                        android:id="@+id/txtSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank" />

                    <TextView
                        android:id="@+id/txtDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txtTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank" />

                    <TextView
                        android:id="@+id/txtStatus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:textColor="@android:color/holo_blue_dark"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txtSubject2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank" />

                    <TextView
                        android:id="@+id/txtDate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txtTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank" />

                    <TextView
                        android:id="@+id/txtStatus2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:textColor="@android:color/holo_blue_dark"/>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>


        <!-- Results Section -->
        <TextView
            android:id="@+id/resultsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/examScheduleCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/resultsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/resultsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2"
                android:shrinkColumns="1,2"
                android:divider="@android:color/darker_gray"
                android:showDividers="middle"
                android:padding="12dp">

                <!-- Header Row -->
                <TableRow>
                    <TextView android:text="Subject" android:textStyle="bold"/>
                    <TextView android:text="Score" android:textStyle="bold" android:gravity="center"/>
                    <TextView android:text="Integrity Status" android:textStyle="bold"/>
                </TableRow>

                <!-- Placeholder Row -->
                <TableRow>
                    <TextView
                        android:id="@+id/txtResultSubject1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank" />

                    <TextView
                        android:id="@+id/txtResultScore1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txtResultIntegrity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:textColor="@android:color/holo_green_dark"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txtResultSubject2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank" />

                    <TextView
                        android:id="@+id/txtResultScore2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txtResultIntegrity2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:textColor="@android:color/holo_green_dark"/>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
