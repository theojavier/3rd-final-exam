<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group 6"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>


        <!-- Subtitle -->
        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="6dp"/>

        <!-- Members Subtitle -->
        <TextView
            android:id="@+id/members_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp"/>

        <!-- Grid for members -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:textColor="@android:color/black"
            android:useDefaultMargins="true">

            <!-- Member 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/member1_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textColor="@android:color/black"
                    android:src="@drawable/drew_castro"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/member1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:text="Drew Castro"
                    android:textColorLink="#070707"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Member 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/member2_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/hannah_jomulo"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/member2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Hannah Jomulo"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Member 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/member3_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/paul_quintero"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/member3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Paul Quintero"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Member 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/member4_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/theo"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/member4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Javier Prince"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
