<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/scheduleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Schedule"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_margin="5dp"
        android:background="@color/teal_200"
        android:textColor="@android:color/black" />

    <!-- Schedule Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@android:color/black"
                android:showDividers="middle"
                android:dividerHeight="1dp" >


                <!-- Header Row -->
                <TableRow android:background="@android:color/white">
                    <TextView
                        android:text="Time"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:minWidth="160dp"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white" />

                    <TextView android:text="Mon" style="@style/ScheduleCell"/>
                    <TextView android:text="Tue" style="@style/ScheduleCell"/>
                    <TextView android:text="Wed" style="@style/ScheduleCell"/>
                    <TextView android:text="Thu" style="@style/ScheduleCell"/>
                    <TextView android:text="Fri" style="@style/ScheduleCell"/>
                    <TextView android:text="Sat" style="@style/ScheduleCell"/>
                </TableRow>

                <!-- Time Slots (7am–7pm) -->
                <TableRow>
                    <TextView android:text="7:00 – 8:00 AM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="8:00 – 9:00 AM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="9:00 – 10:00 AM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="10:00 – 11:00 AM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="11:00 – 12:00 PM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="12:00 – 1:00 PM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="1:00 – 2:00 PM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="2:00 – 3:00 PM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="3:00 – 4:00 PM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="4:00 – 5:00 PM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="5:00 – 6:00 PM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>
                <TableRow><TextView android:text="6:00 – 7:00 PM" style="@style/BigScheduleTime"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                    <TextView style="@style/BigScheduleCell"/>
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>