<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBigInfo"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#FF9800"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Your custom image -->

            <!-- Title text below image -->

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/istockphoto_1401106927_612x612_removebg_preview" />

            <TextView
                android:id="@+id/infoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Progress"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tagline -->
    <TextView
        android:id="@+id/app_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Track, Plan, and Achieve Your Goals"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardBigInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/app_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="Progress is your personal productivity companion. Stay organized, monitor your growth, and accomplish more every day.\n\nThis is just sample text â€” you can replace it anytime with your real content."
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/app_tagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dashboard Title -->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/app_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Box 1: Top Price -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTopPrice"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/homeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardBestSale"
        app:layout_constraintHorizontalWeight="1"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Top Price\n$---"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Box 2: Best Sale -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBestSale"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/homeTitle"
        app:layout_constraintStart_toEndOf="@id/cardTopPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontalWeight="1"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Best Sale\n---"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Box 3: Sales Today -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSalesToday"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#FF9800"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardTopPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardIncome"
        app:layout_constraintHorizontalWeight="1"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sales Today\n---"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Box 4: Income Today -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIncome"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#9C27B0"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardBestSale"
        app:layout_constraintStart_toEndOf="@id/cardSalesToday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontalWeight="1"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Income Today\n$---"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

