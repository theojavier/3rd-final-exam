<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Blue Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:padding="16dp"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- White Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:contentDescription="Profile Picture Placeholder"
                    android:scaleType="centerCrop" />

                <!-- Personal Details header -->
                <TextView
                    android:id="@+id/personalDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <!-- Personal detail items (label + divider) -->
                <!-- Name -->
                <TextView
                    android:id="@+id/label_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Student No. -->
                <TextView
                    android:id="@+id/label_student_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student No.:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Gender -->
                <TextView
                    android:id="@+id/label_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Date of Birth -->
                <TextView
                    android:id="@+id/label_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Civil Status -->
                <TextView
                    android:id="@+id/label_civil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Civil Status:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Nationality -->
                <TextView
                    android:id="@+id/label_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nationality:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
                <!-- Enrolment Details header -->
                <TextView
                    android:id="@+id/enrolmentDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enrolment Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"/>

                <!-- Program -->
                <TextView
                    android:id="@+id/label_program"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Program:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Year/Block -->
                <TextView
                    android:id="@+id/label_year_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Year/Block:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Semester -->
                <TextView
                    android:id="@+id/label_semester"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Semester:"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>