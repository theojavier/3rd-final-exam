<?xml version="1.0" encoding="utf-8"?>

<resources><style name="ScheduleHeader">
    <item name="android:padding">6dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@android:color/darker_gray</item>
    <item name="android:textColor">@android:color/white</item>
</style>

    <style name="ScheduleTime">
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScheduleCell">
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <!-- Bigger header just for schedule -->
    <style name="BigScheduleHeader">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/cell_border</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <!-- Bigger time column -->
    <style name="BigScheduleTime">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/cell_border</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <!-- Bigger cells -->
    <style name="BigScheduleCell">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cell_border</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
</resources>